<% binding.pry %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @user.errors.count,
                 resource: @user.class.model_name.human.downcase)
       %>
    </h2>
    <% binding.pry %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>今日のミーティング</h1>
<table class="table table-striped">
 <thead>
     <tr>
       <th>時間</th>
       <th>講義名</th>
     </tr>
 </thead>
 <tbody>
  <% @today_lists.each do |toli| %>
   <tr>
     <td><%= @Time[toli.stu_time] %></td>
     <td style="padding: 0"><%= link_to toli.subject, toli.content, { :class => "text-decoration sub_link #{Date.today.strftime("%a")}", :target => "_blank"}%></td>
   </tr>
  <% end %>
 </tbody>
</table>

<h1>ミーティング一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>履修曜日</th>
      <th>講義名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= @DAT_OF_WEEK[list.stu_week.to_i] %></td>
        <td style="padding: 0"><%= link_to list.subject, list.content, { :class => "text-decoration sub_link", :target => "_blank"}  %></td>
        <td><%= link_to 'show', list %></td>
        <td><%= link_to 'edit', edit_list_path(list) %></td>
        <td><%= link_to 'destroy', list, method: :delete,remote: true, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '追加', new_list_path, class: "btn btn-outline-secondary" %>
